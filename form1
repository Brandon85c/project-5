using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace project_5
{
    public partial class Form1 : Form
    {
        private Robot Robot = new Robot();
        
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            lblArrow.Text = Robot.ToString();
            Robot.Draw(PnlRobo);
            txtLoc.Text = Robot.location.ToString();
        }
        private void BtnS_Click(object sender, EventArgs e)
        {
            Robot.direction = Direction.South;
            lblArrow.Text = Robot.ToString();

        }

        private void BtnN_Click(object sender, EventArgs e)
        {
            Robot.direction = Direction.North;
            lblArrow.Text = Robot.ToString();
            
        }

        private void BtnE_Click(object sender, EventArgs e)
        {
            Robot.direction = Direction.East;
            lblArrow.Text = Robot.ToString();

        }

        private void BtnW_Click(object sender, EventArgs e)
        {
            Robot.direction = Direction.West;
            lblArrow.Text = Robot.ToString();

        }

        private void BtnG1_Click(object sender, EventArgs e)
        {
            Robot.Move(1);
            Robot.Draw(PnlRobo);
            txtLoc.Text = Robot.location.ToString();          
        }

        private void BtnG10_Click(object sender, EventArgs e)
        {
            
            Robot.Move(10);
            Robot.Draw(PnlRobo);
            txtLoc.Text = Robot.location.ToString();
        
        }

        private void BtnExit_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void PbCanvas_Click(object sender, EventArgs e)
        {

        }

        private void PnlRobo_Paint(object sender, PaintEventArgs e)
        {

        }
    }
}
